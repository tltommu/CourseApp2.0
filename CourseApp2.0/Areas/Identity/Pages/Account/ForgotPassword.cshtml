@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Your Password?";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 28rem;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-3">Forgot Password</h3>
            <p class="text-muted text-center mb-4">Enter your email to receive a password reset link.</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
