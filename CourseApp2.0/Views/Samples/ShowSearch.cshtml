<style>
    .search-container {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        max-width: 600px;
        margin-top: 2rem;
    }

    .search-title {
        font-weight: 600;
        font-size: 1.5rem;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: #2563eb;
        border-color: #2563eb;
    }

    .btn-primary:hover {
        background-color: #1d4ed8;
        border-color: #1d4ed8;
    }

    .back-link {
        margin-top: 1rem;
        display: inline-block;
        color: #2563eb;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<div class="container">
    <div class="search-container">
        <div class="search-title">Search for a Sample</div>
        <form asp-action="ShowSearchResults">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input name="name" class="form-control" placeholder="Enter name to search..." />
            </div>
            <div class="mb-3">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index" class="back-link">← Back to List</a>
    </div>
</div>


